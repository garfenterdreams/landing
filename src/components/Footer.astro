---
import { products, categories } from '../data/products';

const activeProducts = products.filter(p => p.status === 'active');
---

<footer class="section-dark py-16">
  <div class="container mx-auto px-4">
    <div class="grid md:grid-cols-4 gap-8 mb-12">
      <!-- Brand -->
      <div class="md:col-span-1">
        <a href="/" class="gt-logo mb-4 inline-flex">
          <div class="gt-logo-icon">GT</div>
          <div class="gt-logo-text text-white">
            Garfenter <span class="text-blue-400">Tech</span>
          </div>
        </a>
        <p class="text-gray-400 mt-4 text-sm">
          Software empresarial profesional para negocios en Latinoamérica.
        </p>
      </div>

      <!-- Products -->
      <div>
        <h4 class="font-semibold text-white mb-4">Productos</h4>
        <ul class="space-y-2">
          {activeProducts.slice(0, 6).map(product => (
            <li>
              <a href={`/${product.id}/`} class="text-gray-400 hover:text-white text-sm transition-colors">
                {product.icon} {product.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- More Products -->
      <div>
        <h4 class="font-semibold text-white mb-4">Más Productos</h4>
        <ul class="space-y-2">
          {activeProducts.slice(6).map(product => (
            <li>
              <a href={`/${product.id}/`} class="text-gray-400 hover:text-white text-sm transition-colors">
                {product.icon} {product.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Categories -->
      <div>
        <h4 class="font-semibold text-white mb-4">Categorías</h4>
        <ul class="space-y-2">
          {categories.map(cat => (
            <li>
              <a href={`/#${cat.id}`} class="text-gray-400 hover:text-white text-sm transition-colors">
                {cat.icon} {cat.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom -->
    <div class="border-t border-gray-800 pt-8 flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-gray-500 text-sm">
        © {new Date().getFullYear()} Garfenter Tech. Todos los derechos reservados.
      </p>
      <div class="flex items-center gap-4">
        <a href="/llms.txt" class="text-gray-500 hover:text-white text-sm transition-colors">
          llms.txt
        </a>
        <a href="/sitemap-index.xml" class="text-gray-500 hover:text-white text-sm transition-colors">
          Sitemap
        </a>
      </div>
    </div>
  </div>
</footer>
