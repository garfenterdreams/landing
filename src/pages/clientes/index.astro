---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getProduct } from '../../data/products';

const product = getProduct('clientes')!;
const title = `Garfenter ${product.name} | ${product.title}`;
const description = product.description;
---

<Layout title={title} description={description}>
  <Header variant="product" productName={product.name} />

  <!-- Hero Section -->
  <section class="hero-gradient pt-32 pb-20">
    <div class="container mx-auto px-4">
      <div class="grid lg:grid-cols-2 gap-12 items-center max-w-7xl mx-auto">
        <div class="text-center lg:text-left">
          <div class="inline-flex items-center gap-2 mb-6">
            <span class="badge badge-primary">{product.categoryLabel}</span>
            <span class="badge badge-success">Basado en {product.basedOn}</span>
          </div>

          <h1 class="text-5xl md:text-6xl font-bold text-gray-900 mb-6 leading-tight">
            {product.title}
          </h1>

          <p class="text-xl text-gray-700 mb-8 leading-relaxed">
            {product.subtitle}
          </p>

          <p class="text-lg text-gray-600 mb-10">
            {product.description}
          </p>

          <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
            <a href={product.demoUrl} class="btn btn-primary text-lg px-8 py-4">
              Ver Demo en Vivo
            </a>
            <a href="/#productos" class="btn btn-secondary text-lg px-8 py-4">
              Ver Más Productos
            </a>
          </div>

          <div class="mt-12 flex flex-wrap justify-center lg:justify-start gap-6 text-sm text-gray-600">
            {product.techStack.map(tech => (
              <span class="flex items-center gap-2">
                <span class="w-2 h-2 rounded-full bg-pink-500"></span>
                {tech}
              </span>
            ))}
          </div>
        </div>
        <div class="animate-fade-in-up" style="animation-delay: 0.4s">
          <picture>
            <source srcset="/images/hero/clientes.webp" type="image/webp">
            <img
              src="/images/hero/clientes.png"
              alt="Equipo de ventas usando software CRM"
              class="rounded-2xl shadow-2xl w-full"
              width="800"
              height="450"
              loading="eager"
            >
          </picture>
        </div>
      </div>
    </div>
  </section>

  <!-- Features -->
  <section class="section bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">
          Características Principales
        </h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          CRM moderno y personalizable, alternativa profesional a Salesforce
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {product.features.map(feature => (
          <div class="card">
            <div class="feature-icon" style="background: linear-gradient(135deg, #EC4899 0%, #DB2777 100%);">
              {feature.icon}
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">
              {feature.title}
            </h3>
            <p class="text-gray-600">
              {feature.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Benefits -->
  <section class="section section-light">
    <div class="container mx-auto px-4">
      <div class="max-w-5xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-4xl font-bold text-gray-900 mb-4">
            Comunidad y Desarrollo Activo
          </h2>
          <p class="text-xl text-gray-600">
            Respaldado por una comunidad global de desarrolladores
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          {product.benefits.map(benefit => (
            <div class="text-center">
              <div class="text-5xl font-bold text-pink-600 mb-3">
                {benefit.number}
              </div>
              <div class="text-lg text-gray-700 font-medium">
                {benefit.label}
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Use Cases -->
  <section class="section bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-4xl font-bold text-gray-900 mb-4">
            Ideal Para Tu Equipo
          </h2>
          <p class="text-xl text-gray-600">
            El CRM perfecto para equipos de ventas modernos
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-6">
          {product.useCases.map(useCase => (
            <div class="flex items-start gap-4 p-6 bg-pink-50 rounded-lg">
              <div class="flex-shrink-0 w-6 h-6 rounded-full bg-pink-600 flex items-center justify-center text-white text-sm font-bold">
                ✓
              </div>
              <div class="text-lg text-gray-800 font-medium">
                {useCase}
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- How it Works -->
  <section class="section section-light">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold text-gray-900 mb-4">
            Cómo Funciona
          </h2>
          <p class="text-xl text-gray-600">
            Organiza tu pipeline de ventas en 3 simples pasos
          </p>
        </div>

        <div class="space-y-8">
          <div class="flex gap-6 items-start">
            <div class="flex-shrink-0 w-12 h-12 rounded-full bg-pink-600 text-white flex items-center justify-center text-xl font-bold">
              1
            </div>
            <div>
              <h3 class="text-2xl font-bold text-gray-900 mb-3">
                Importa tus Contactos
              </h3>
              <p class="text-lg text-gray-600">
                Importa tu base de datos desde Excel, CSV o tu CRM actual. Organiza contactos, empresas y oportunidades en segundos. Define campos personalizados según tus necesidades.
              </p>
            </div>
          </div>

          <div class="flex gap-6 items-start">
            <div class="flex-shrink-0 w-12 h-12 rounded-full bg-pink-600 text-white flex items-center justify-center text-xl font-bold">
              2
            </div>
            <div>
              <h3 class="text-2xl font-bold text-gray-900 mb-3">
                Gestiona tu Pipeline
              </h3>
              <p class="text-lg text-gray-600">
                Visualiza tus oportunidades en un tablero Kanban. Arrastra y suelta para avanzar en el proceso de ventas. Asigna tareas, agrega notas y hace seguimiento a cada interacción.
              </p>
            </div>
          </div>

          <div class="flex gap-6 items-start">
            <div class="flex-shrink-0 w-12 h-12 rounded-full bg-pink-600 text-white flex items-center justify-center text-xl font-bold">
              3
            </div>
            <div>
              <h3 class="text-2xl font-bold text-gray-900 mb-3">
                Automatiza y Crece
              </h3>
              <p class="text-lg text-gray-600">
                Crea flujos de trabajo automáticos sin código. Integra con tus herramientas favoritas mediante API GraphQL y REST. Escala tu equipo de ventas con insights en tiempo real.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="section-dark section">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
          Potencia tus Ventas con IA
        </h2>
        <p class="text-xl text-gray-300 mb-10">
          Más de 20,000 empresas confían en Twenty CRM para gestionar sus relaciones con clientes
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href={product.demoUrl} class="btn btn-primary text-lg px-8 py-4">
            Ver Demo en Vivo
          </a>
          <a href="mailto:hola@garfenter.com" class="btn btn-secondary text-lg px-8 py-4 bg-white/10 border-white text-white hover:bg-white hover:text-gray-900">
            Agendar Demostración
          </a>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  "name": "Garfenter Clientes",
  "applicationCategory": "BusinessApplication",
  "applicationSubCategory": "Customer Relationship Management",
  "operatingSystem": "Web",
  "description": "CRM moderno profesional, alternativa a Salesforce. Pipeline visual, automatización, API completa y 100% personalizable para equipos de ventas.",
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "GTQ",
    "description": "Software profesional - Sin costo de licencia"
  },
  "softwareVersion": "0.x",
  "creator": {
    "@type": "Organization",
    "name": "Garfenter Tech",
    "url": "https://garfenter.com"
  },
  "featureList": [
    "Pipeline visual estilo Kanban",
    "Automatización sin código",
    "API GraphQL y REST",
    "Campos y objetos personalizables",
    "Tareas y notas integradas",
    "Importación desde Excel/CSV"
  ],
  "audience": {
    "@type": "Audience",
    "audienceType": "Equipos de ventas B2B, Startups, Agencias, Consultoras"
  }
}
</script>
