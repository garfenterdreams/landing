---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getProduct } from '../../data/products';

const product = getProduct('contable')!;
const title = `Garfenter ${product.name} | ${product.title}`;
const description = product.description;
---

<Layout title={title} description={description}>
  <Header variant="product" productName={product.name} />

  <!-- Hero Section -->
  <section class="hero-gradient pt-32 pb-20">
    <div class="container mx-auto px-4">
      <div class="grid lg:grid-cols-2 gap-12 items-center max-w-7xl mx-auto">
        <div class="text-center lg:text-left">
          <div class="inline-flex items-center gap-2 mb-6">
            <span class="badge badge-primary">{product.categoryLabel}</span>
            <span class="badge badge-success">Basado en {product.basedOn}</span>
          </div>

          <h1 class="text-5xl md:text-6xl font-bold text-gray-900 mb-6 leading-tight">
            {product.title}
          </h1>

          <p class="text-xl text-gray-700 mb-8 leading-relaxed">
            {product.subtitle}
          </p>

          <p class="text-lg text-gray-600 mb-10">
            {product.description}
          </p>

          <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
            <a href={product.demoUrl} class="btn btn-primary text-lg px-8 py-4">
              Ver Demo en Vivo
            </a>
            <a href="/#productos" class="btn btn-secondary text-lg px-8 py-4">
              Ver Más Productos
            </a>
          </div>

          <div class="mt-12 flex flex-wrap justify-center lg:justify-start gap-6 text-sm text-gray-600">
            {product.techStack.map(tech => (
              <span class="flex items-center gap-2">
                <span class="w-2 h-2 rounded-full bg-purple-500"></span>
                {tech}
              </span>
            ))}
          </div>
        </div>
        <div class="animate-fade-in-up" style="animation-delay: 0.4s">
          <picture>
            <source srcset="/images/hero/contable.webp" type="image/webp">
            <img
              src="/images/hero/contable.png"
              alt="Profesional revisando reportes financieros"
              class="rounded-2xl shadow-2xl w-full"
              width="800"
              height="450"
              loading="eager"
            >
          </picture>
        </div>
      </div>
    </div>
  </section>

  <!-- Features -->
  <section class="section bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">
          Características Principales
        </h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Software contable completo diseñado para PYMEs y emprendedores
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {product.features.map(feature => (
          <div class="card">
            <div class="feature-icon" style="background: linear-gradient(135deg, #8B5CF6 0%, #7C3AED 100%);">
              {feature.icon}
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">
              {feature.title}
            </h3>
            <p class="text-gray-600">
              {feature.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Benefits -->
  <section class="section section-light">
    <div class="container mx-auto px-4">
      <div class="max-w-5xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-4xl font-bold text-gray-900 mb-4">
            Contabilidad en la Nube
          </h2>
          <p class="text-xl text-gray-600">
            Accede desde cualquier lugar, en cualquier momento
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          {product.benefits.map(benefit => (
            <div class="text-center">
              <div class="text-5xl font-bold text-purple-600 mb-3">
                {benefit.number}
              </div>
              <div class="text-lg text-gray-700 font-medium">
                {benefit.label}
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Use Cases -->
  <section class="section bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-4xl font-bold text-gray-900 mb-4">
            Diseñado Para Ti
          </h2>
          <p class="text-xl text-gray-600">
            La solución contable perfecta para tu negocio
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-6">
          {product.useCases.map(useCase => (
            <div class="flex items-start gap-4 p-6 bg-purple-50 rounded-lg">
              <div class="flex-shrink-0 w-6 h-6 rounded-full bg-purple-600 flex items-center justify-center text-white text-sm font-bold">
                ✓
              </div>
              <div class="text-lg text-gray-800 font-medium">
                {useCase}
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- How it Works -->
  <section class="section section-light">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold text-gray-900 mb-4">
            Cómo Funciona
          </h2>
          <p class="text-xl text-gray-600">
            Gestiona tus finanzas de forma profesional en 3 pasos
          </p>
        </div>

        <div class="space-y-8">
          <div class="flex gap-6 items-start">
            <div class="flex-shrink-0 w-12 h-12 rounded-full bg-purple-600 text-white flex items-center justify-center text-xl font-bold">
              1
            </div>
            <div>
              <h3 class="text-2xl font-bold text-gray-900 mb-3">
                Configura tu Empresa
              </h3>
              <p class="text-lg text-gray-600">
                Crea tu cuenta e ingresa la información de tu empresa. Configura tu plan de cuentas, monedas, tasas de impuestos y estructura organizacional en minutos.
              </p>
            </div>
          </div>

          <div class="flex gap-6 items-start">
            <div class="flex-shrink-0 w-12 h-12 rounded-full bg-purple-600 text-white flex items-center justify-center text-xl font-bold">
              2
            </div>
            <div>
              <h3 class="text-2xl font-bold text-gray-900 mb-3">
                Registra Transacciones
              </h3>
              <p class="text-lg text-gray-600">
                Crea facturas, registra gastos, gestiona cuentas por cobrar y pagar. Sincroniza con tu banco para conciliaciones automáticas. Todo se actualiza en tiempo real.
              </p>
            </div>
          </div>

          <div class="flex gap-6 items-start">
            <div class="flex-shrink-0 w-12 h-12 rounded-full bg-purple-600 text-white flex items-center justify-center text-xl font-bold">
              3
            </div>
            <div>
              <h3 class="text-2xl font-bold text-gray-900 mb-3">
                Genera Reportes
              </h3>
              <p class="text-lg text-gray-600">
                Accede a balance general, estado de resultados, flujo de caja y reportes personalizados. Toma decisiones informadas con datos financieros precisos y actualizados.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="section-dark section">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
          Simplifica tu Contabilidad
        </h2>
        <p class="text-xl text-gray-300 mb-10">
          Únete a miles de PYMEs que ya gestionan sus finanzas con Garfenter Contable
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href={product.demoUrl} class="btn btn-primary text-lg px-8 py-4">
            Ver Demo en Vivo
          </a>
          <a href="mailto:hola@garfenter.com" class="btn btn-secondary text-lg px-8 py-4 bg-white/10 border-white text-white hover:bg-white hover:text-gray-900">
            Hablar con Experto
          </a>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  "name": "Garfenter Contable",
  "applicationCategory": "BusinessApplication",
  "applicationSubCategory": "Accounting Software",
  "operatingSystem": "Web",
  "description": "Software contable inteligente para PYMEs. Facturación, reportes financieros, multi-moneda e integración bancaria para mejores decisiones empresariales.",
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "GTQ",
    "description": "Software profesional - Instalación gratuita"
  },
  "softwareVersion": "1.x",
  "creator": {
    "@type": "Organization",
    "name": "Garfenter Tech",
    "url": "https://garfenter.com"
  },
  "featureList": [
    "Facturación profesional",
    "Reportes financieros (Balance, P&L, Flujo de caja)",
    "Multi-moneda",
    "Integración bancaria",
    "Gestión de inventario",
    "Colaboración multi-usuario"
  ],
  "audience": {
    "@type": "Audience",
    "audienceType": "Pequeños negocios, Contadores independientes, Emprendedores, Freelancers"
  }
}
</script>
