---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getProduct } from '../../data/products';

const product = getProduct('inmuebles')!;
const title = `Garfenter ${product.name} | ${product.title}`;
const description = product.description;
---

<Layout title={title} description={description}>
  <Header variant="product" productName={product.name} />

  <!-- Hero Section -->
  <section class="hero-gradient pt-32 pb-20">
    <div class="container mx-auto px-4">
      <div class="grid lg:grid-cols-2 gap-12 items-center max-w-7xl mx-auto">
        <div class="text-center lg:text-left">
          <div class="inline-flex items-center gap-2 bg-white/80 backdrop-blur-sm px-4 py-2 rounded-full mb-6">
            <span class="badge badge-warning">{product.categoryLabel}</span>
            <span class="text-sm text-gray-600">Basado en {product.basedOn}</span>
          </div>

          <div class="text-6xl mb-6">{product.icon}</div>

          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
            {product.title}
          </h1>

          <p class="text-xl text-gray-600 mb-8">
            {product.subtitle}
          </p>

          <p class="text-lg text-gray-700 mb-8">
            {product.description}
          </p>

          <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
            <a href={product.demoUrl} class="btn btn-primary text-lg px-8 py-4">
              Ver Demo en Vivo
            </a>
            <a href="/#productos" class="btn btn-secondary text-lg px-8 py-4">
              Ver Más Productos
            </a>
          </div>
        </div>
        <div class="animate-fade-in-up" style="animation-delay: 0.4s">
          <picture>
            <source srcset="/images/hero/inmuebles.webp" type="image/webp">
            <img
              src="/images/hero/inmuebles.png"
              alt="Edificio residencial moderno"
              class="rounded-2xl shadow-2xl w-full"
              width="800"
              height="450"
              loading="eager"
            >
          </picture>
        </div>
      </div>
    </div>
  </section>

  <!-- Features -->
  <section class="section bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Características Principales
        </h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Todo lo que necesitas para administrar condominios y propiedades de forma profesional
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {product.features.map(feature => (
          <div class="card">
            <div class="feature-icon">
              {feature.icon}
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">
              {feature.title}
            </h3>
            <p class="text-gray-600">
              {feature.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Benefits -->
  <section class="section section-light">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Beneficios Comprobados
        </h2>
        <p class="text-xl text-gray-600">
          Resultados reales para administradores de propiedades
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {product.benefits.map(benefit => (
          <div class="card text-center">
            <div class="text-5xl font-bold text-blue-600 mb-2">
              {benefit.number}
            </div>
            <p class="text-lg text-gray-700 font-semibold">
              {benefit.label}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Use Cases -->
  <section class="section bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          ¿Para Quién es Garfenter Inmuebles?
        </h2>
        <p class="text-xl text-gray-600">
          Ideal para diferentes tipos de administración inmobiliaria
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-6 max-w-4xl mx-auto">
        {product.useCases.map(useCase => (
          <div class="flex items-start gap-4 p-6 bg-gray-50 rounded-lg">
            <div class="text-2xl">✓</div>
            <div class="flex-1">
              <h3 class="text-lg font-semibold text-gray-900 mb-1">
                {useCase}
              </h3>
              <p class="text-gray-600 text-sm">
                {useCase === 'Administradores de condominios' && 'Gestiona múltiples condominios desde una sola plataforma con reportes consolidados.'}
                {useCase === 'Edificios residenciales' && 'Portal web para residentes, tickets de servicio y cobros de mantenimiento automatizados.'}
                {useCase === 'Propiedades comerciales' && 'Control de arrendamientos, pagos y mantenimiento para espacios comerciales.'}
                {useCase === 'Centros empresariales' && 'Administración integral de servicios, amenidades y comunicación con empresas inquilinas.'}
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- How it Works -->
  <section class="section section-light">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Cómo Funciona
        </h2>
        <p class="text-xl text-gray-600">
          Comienza en 3 simples pasos
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        <div class="text-center">
          <div class="w-16 h-16 bg-blue-600 text-white rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-4">
            1
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">
            Configura tu Propiedad
          </h3>
          <p class="text-gray-600">
            Registra unidades, áreas comunes y residentes en minutos. Importa datos desde Excel.
          </p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-blue-600 text-white rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-4">
            2
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">
            Activa el Portal
          </h3>
          <p class="text-gray-600">
            Los residentes acceden 24/7 para ver estados de cuenta, pagar cuotas y reportar incidencias.
          </p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-blue-600 text-white rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-4">
            3
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">
            Gestiona y Reporta
          </h3>
          <p class="text-gray-600">
            Administra tickets, genera facturas y obtén reportes financieros en tiempo real.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="section-dark section">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
          Moderniza la Administración de tus Propiedades
        </h2>
        <p class="text-xl text-gray-300 mb-8">
          Únete a cientos de administradores que ya están digitalizando la gestión de condominios con Garfenter Inmuebles.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href={product.demoUrl} class="btn btn-primary text-lg px-8 py-4">
            Probar Demo Gratis
          </a>
          <a href="mailto:contacto@garfenter.com" class="btn btn-secondary text-lg px-8 py-4 bg-white/10 border-white hover:bg-white hover:text-gray-900">
            Solicitar Cotización
          </a>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  "name": "Garfenter Inmuebles",
  "applicationCategory": "BusinessApplication",
  "applicationSubCategory": "Property Management Software",
  "operatingSystem": "Web",
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "USD"
  },
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "4.8",
    "ratingCount": "127"
  },
  "description": "Software de administración de condominios y propiedades. Gestión de tickets, cobros, facturación y portal para residentes.",
  "featureList": [
    "Tickets de servicio",
    "Portal de residentes",
    "Facturación de mantenimiento",
    "Seguimiento de pagos",
    "Marketplace de servicios",
    "Reportes financieros"
  ],
  "screenshot": "https://inmuebles.garfenter.com/screenshot.png",
  "softwareVersion": "1.0",
  "url": "https://garfenter.com/inmuebles/"
}
</script>
