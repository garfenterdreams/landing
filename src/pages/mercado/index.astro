---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getProduct } from '../../data/products';

const product = getProduct('mercado')!;
const title = `Garfenter ${product.name} | ${product.title}`;
const description = product.description;
---

<Layout title={title} description={description}>
  <Header variant="product" productName={product.name} />

  <!-- Hero Section with Coming Soon Banner -->
  <section class="hero-gradient pt-32 pb-20 relative overflow-hidden">
    <!-- Coming Soon Ribbon -->
    <div class="absolute top-24 right-0 md:top-28 md:right-0 z-10">
      <div class="bg-gradient-to-r from-amber-500 to-orange-500 text-white px-16 py-2 shadow-lg transform rotate-45 translate-x-12 translate-y-8 md:translate-x-20 md:translate-y-12">
        <span class="font-bold text-sm uppercase tracking-wider">Próximamente</span>
      </div>
    </div>

    <div class="container mx-auto px-4">
      <div class="grid lg:grid-cols-2 gap-12 items-center max-w-7xl mx-auto">
        <div class="text-center lg:text-left">
          <div class="inline-flex items-center gap-2 bg-white px-4 py-2 rounded-full shadow-sm mb-6">
            <span class="text-2xl">{product.icon}</span>
            <span class="badge badge-primary">{product.categoryLabel}</span>
            <span class="badge badge-warning ml-2">Próximamente</span>
          </div>

          <h1 class="text-4xl md:text-6xl font-bold text-gray-900 mb-6">
            {product.title}
          </h1>

          <p class="text-xl text-gray-600 mb-4">
            {product.subtitle}
          </p>

          <p class="text-lg text-gray-700 mb-8">
            {product.description}
          </p>

          <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start items-center">
            <button disabled class="btn btn-primary text-lg opacity-50 cursor-not-allowed">
              Demo Disponible Pronto
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
              </svg>
            </button>
            <a href="#features" class="btn btn-secondary text-lg">
              Conocer Más
            </a>
          </div>

          <div class="mt-8 text-sm text-gray-500">
            Basado en {product.basedOn}
          </div>

          <!-- Coming Soon Notice -->
          <div class="mt-12 bg-amber-50 border border-amber-200 rounded-lg p-6">
            <div class="flex items-start gap-4">
              <svg class="w-6 h-6 text-amber-600 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <div class="text-left">
                <h3 class="font-semibold text-amber-900 mb-2">Producto en Desarrollo</h3>
                <p class="text-amber-800 text-sm">
                  Estamos trabajando en traer esta increíble plataforma de marketplace a Garfenter.
                  Regístrate para recibir notificaciones cuando esté disponible.
                </p>
              </div>
            </div>
          </div>
        </div>
        <div class="animate-fade-in-up" style="animation-delay: 0.4s">
          <picture>
            <source srcset="/images/hero/mercado.webp" type="image/webp">
            <img
              src="/images/hero/mercado.png"
              alt="Marketplace digital con múltiples vendedores"
              class="rounded-2xl shadow-2xl w-full"
              width="800"
              height="450"
              loading="eager"
            >
          </picture>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section id="features" class="section">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Características Planificadas
        </h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Todo lo que necesitas para crear tu propio marketplace multi-vendedor
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {product.features.map(feature => (
          <div class="card">
            <div class="feature-icon">
              {feature.icon}
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">
              {feature.title}
            </h3>
            <p class="text-gray-600">
              {feature.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Benefits/Stats Section -->
  <section class="section-light">
    <div class="container mx-auto px-4">
      <div class="text-center mb-8">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Ventajas del Marketplace
        </h2>
        <p class="text-xl text-gray-600">
          Crea tu plataforma sin límites
        </p>
      </div>
      <div class="grid md:grid-cols-3 gap-8 text-center">
        {product.benefits.map(benefit => (
          <div class="bg-white rounded-xl p-8 shadow-sm">
            <div class="text-5xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-teal-600 to-teal-800 mb-2">
              {benefit.number}
            </div>
            <p class="text-lg text-gray-700 font-medium">
              {benefit.label}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Use Cases Section -->
  <section class="section">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-8 text-center">
          Ideal Para
        </h2>

        <div class="grid md:grid-cols-2 gap-6">
          {product.useCases.map(useCase => (
            <div class="flex items-start gap-4 p-6 bg-gray-50 rounded-lg">
              <svg class="w-6 h-6 text-green-600 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <div>
                <h3 class="font-semibold text-gray-900 text-lg">
                  {useCase}
                </h3>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Tech Stack Section -->
  <section class="section-light">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-6">
          Stack Tecnológico
        </h2>
        <div class="flex flex-wrap justify-center gap-4">
          {product.techStack.map(tech => (
            <span class="badge badge-primary px-4 py-2 text-base">
              {tech}
            </span>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section - Notify Me -->
  <section class="section-dark">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
          Sé el Primero en Saberlo
        </h2>
        <p class="text-xl text-gray-300 mb-8">
          Regístrate para recibir una notificación cuando Garfenter Mercado esté disponible.
          Tendrás acceso anticipado a la plataforma.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="mailto:contacto@garfenter.com?subject=Interesado en Garfenter Mercado" class="btn btn-primary text-lg">
            Notificarme cuando esté disponible
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </a>
        </div>
        <p class="text-sm text-gray-400 mt-6">
          Fecha estimada de lanzamiento: Q1 2026
        </p>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<!-- Schema.org JSON-LD -->
<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  "name": `Garfenter ${product.name}`,
  "applicationCategory": "BusinessApplication",
  "description": product.description,
  "offers": {
    "@type": "Offer",
    "availability": "https://schema.org/PreOrder",
    "price": "0",
    "priceCurrency": "USD"
  },
  "operatingSystem": "Web",
  "author": {
    "@type": "Organization",
    "name": "Garfenter Tech"
  },
  "featureList": product.features.map(f => f.title).join(", ")
})} />
